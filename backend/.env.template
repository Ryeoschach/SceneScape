# SceneScape Backend Environment Configuration
# 将此文件复制为 .env 并填入您的配置

# TMDb API Configuration
# 请从 https://www.themoviedb.org/settings/api 获取API密钥
TMDB_API_KEY=your_tmdb_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./scenescape.db

# File Storage Paths
POSTER_PATH=./cache/posters
BACKDROP_PATH=./cache/backdrops

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration (for development)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173"]

# Task Configuration
MAX_CONCURRENT_TASKS=3
TASK_CLEANUP_INTERVAL=3600

# Image Download Configuration
MAX_CONCURRENT_DOWNLOADS=5
IMAGE_QUALITY=high
GENERATE_THUMBNAILS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Performance Configuration
CACHE_SIZE=1000
CACHE_TTL=3600

# Development Configuration
AUTO_RELOAD=true
RELOAD_DIRS=["app"]
